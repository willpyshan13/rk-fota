<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="145dip"
        android:layout_height="145dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="83dp"
        android:background="@drawable/upgrade_download_icon"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/download_version"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#0072ff"
        android:textSize="46dip"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="440dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_marginTop="30dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/download_updating"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/download_progress_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20dip" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_horizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="400dip"
        android:layout_height="20dip"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20dip"
         />

    <Button
        android:id="@+id/download_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="28dip"
        android:text="@string/cancel"
        />

</LinearLayout>